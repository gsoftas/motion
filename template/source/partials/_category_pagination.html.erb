<div class="category-pagination">
  <nav class="pagination is-centered" role="navigation" aria-label="pagination">
    <% if paginate %>
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page, class: "pagination-previous" %>
      <% else %>
        <a class="pagination-previous" disabled>Previous</a>
      <% end %>
    
       <p class="pagination-index">
        <span><%= "#{page_number} of #{num_pages}" %></span>
      </p>
    
      <% if next_page %>
        <%= link_to 'Next page', next_page, class: "pagination-next" %>
      <% else %>
        <a class="pagination-next" disabled>Next Page</a>
      <% end %>
    <% end %>
  </nav>
</div>