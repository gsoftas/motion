<div class="articles-pagination">
  <nav class="pagination-container pagination is-centered" role="navigation" aria-label="pagination">
    <% if paginate %>
      <% if prev_page %>
        <%= link_to 'Newer', prev_page.url, class: "pagination-previous" %>
      <% else %>
        <a class="pagination-previous" disabled>Newer</a>
      <% end %>
      <p class="pagination-index">
        <span><%= "#{page_number} of #{num_pages}" %></span>
      </p>
    
      <% if next_page %>
        <%= link_to 'Older', next_page.url, class: "pagination-next" %>
      <% else %>
        <a class="pagination-next" disabled>Older</a>
      <% end %>
    <% end %>
  </nav>
</div>